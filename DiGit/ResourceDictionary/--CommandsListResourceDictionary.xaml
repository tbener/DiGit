    <Style x:Key="CommandListBoxItemStyle" TargetType="{x:Type ListBoxItem}">
        <Style.Resources>
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
            <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="Transparent"/>
        </Style.Resources>
        <Setter Property="ContentTemplate" Value="{DynamicResource CommandListBoxItemTemplate}" />
        <Setter Property="FontFamily" Value="VAGRounded BT"/>
        <Style.Triggers>

            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="ContentTemplate" Value="{DynamicResource CommandMouseOverItemTemplate}" />
            </Trigger>

        </Style.Triggers>

    </Style>

    <Style x:Key="CommandsListBoxStyle" TargetType="{x:Type ListBox}">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="IsSynchronizedWithCurrentItem" Value="True"/>
        <Setter Property="ItemContainerStyle" Value="{DynamicResource CommandListBoxItemStyle}" />

        <Setter Property="Margin" Value="0"/>
        <Setter Property="BorderThickness" Value="0"/>

    </Style>
    
    <Style x:Key="CaptionMenuItem" TargetType="{x:Type MenuItem}">
        <Setter Property="Background" Value="{DynamicResource FlatButtonBackgroundBrush}"/>
    </Style>
</ResourceDictionary>