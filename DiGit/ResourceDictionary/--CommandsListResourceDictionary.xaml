<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:model="clr-namespace:DiGit.Model"
                    xmlns:configuration="clr-namespace:DiGit.Configuration">

    <Style x:Key="CommandListItemBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="ToolTip" Value="{Binding HelpText}"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
        
    </Style>
    
    <Style x:Key="CommandTextBlockListItemStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Text" Value="{Binding header}"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <DataTemplate x:Key="CommandListBoxItemTemplate" DataType="configuration:DiGitConfigCommand">
        <Border x:Name="border" Style="{DynamicResource CommandListItemBorderStyle}">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#BCD6F3" Offset="0" />
                    <GradientStop Color="#D9E9FB" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>

            <TextBlock Style="{DynamicResource CommandTextBlockListItemStyle}" FontFamily="Segoe UI"/>
        </Border>
    </DataTemplate>


